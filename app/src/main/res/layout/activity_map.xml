<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/black">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/emergency_map"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/a_safety_server_location_profile"
            android:textColor="@color/gray_light"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Map Container -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Google Map Fragment -->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Custom Info Window Overlay -->
        <LinearLayout
            android:id="@+id/infoWindowOverlay"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_map_marker"
            android:padding="12dp"
            android:layout_margin="16dp"
            android:visibility="gone"
            android:elevation="8dp">

            <TextView
                android:id="@+id/tvMarkerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMarkerDetail1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_100m"
                android:textColor="@color/gray_light"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvMarkerDetail2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_42_9m"
                android:textColor="@color/gray_light"
                android:textSize="10sp"
                tools:ignore="SmallSp" />

        </LinearLayout>

        <!-- Current Location Fab -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabMyLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_my_location"
            app:backgroundTint="@color/sos_red"
            app:tint="@color/white"
            tools:ignore="TouchTargetSizeCheck" />

    </RelativeLayout>

    <!-- Bottom Info Panel -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/gray_card"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nearby_safety_servers"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Server Stats Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="4">

            <!-- Server 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_card"
                android:padding="8dp"
                android:layout_marginEnd="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100M"
                    android:textColor="@color/gray_light"
                    android:textSize="10sp"
                    tools:ignore="HardcodedText,SmallSp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="42.9m"
                    android:textColor="@color/gray_light"
                    android:textSize="9sp"
                    tools:ignore="HardcodedText,SmallSp" />

            </LinearLayout>

            <!-- Server 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_card"
                android:padding="8dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_24x"
                    android:textColor="@color/gray_light"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_12m"
                    android:textColor="@color/gray_light"
                    android:textSize="9sp"
                    tools:ignore="SmallSp" />

            </LinearLayout>

            <!-- Server 3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_card"
                android:padding="8dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22x"
                    android:textColor="@color/gray_light"
                    android:textSize="10sp" />

            </LinearLayout>

            <!-- Server 4 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_card"
                android:padding="8dp"
                android:layout_marginStart="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21.7m"
                    android:textColor="@color/gray_light"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AC220V"
                    android:textColor="@color/gray_light"
                    android:textSize="9sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Additional Server Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/bg_card"
            android:padding="12dp"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23.1m"
                android:textColor="@color/gray_light"
                android:textSize="10sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NVIDIA-LEGENDA"
                android:textColor="@color/gray_light"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="4"
        android:background="@color/black"
        android:padding="8dp">

        <Button
            android:id="@+id/btnSosTab"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="SOS"
            android:textColor="@color/gray_light"
            android:background="@android:color/transparent"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnChatTab"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="CHAT"
            android:textColor="@color/gray_light"
            android:background="@android:color/transparent"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnMapTab"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="MAP"
            android:textColor="@color/sos_red"
            android:background="@android:color/transparent"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnSettingsTab"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="SETTINGS"
            android:textColor="@color/gray_light"
            android:background="@android:color/transparent"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>